<?xml version="1.0" encoding="UTF-8"?>
<menus>
  <!-- File Menu -->
  <menu name="File">
    <item name="New Project..." command="NewProject" shortcut="Cmd+N"/>
    <item name="Open Project..." command="OpenProject" shortcut="Cmd+O"/>
    <separator/>
    <menu name="Import">
      <item name="Media Files..." command="ImportMedia" shortcut="Cmd+I"/>
      <item name="Resolve Project (.drp)..." command="ImportResolveProject"/>
      <item name="Resolve Database..." command="ImportResolveDatabase"/>
      <item name="FCP7 XML..." command="ImportFCP7XML"/>
      <item name="Premiere XML..." command="ImportPremiereXML"/>
    </menu>
    <menu name="Export">
      <item name="FCP7 XML..." command="ExportFCP7XML"/>
      <item name="Premiere XML..." command="ExportPremiereXML"/>
      <item name="EDL..." command="ExportEDL"/>
    </menu>
    <separator/>
    <item name="Save Project" command="SaveProject" shortcut="Cmd+S"/>
    <item name="Save Project As..." command="SaveProjectAs" shortcut="Cmd+Shift+S"/>
    <separator/>
    <item name="Project Settings..." command="ProjectSettings"/>
    <separator/>
    <item name="Quit" command="Quit" shortcut="Cmd+Q"/>
  </menu>

  <!-- Edit Menu -->
  <menu name="Edit">
    <item name="Undo" command="Undo" shortcut="Cmd+Z"/>
    <item name="Redo" command="Redo" shortcut="Cmd+Shift+Z"/>
    <item name="Edit History..." command="EditHistory"/>
    <separator/>
    <item name="Cut" command="Cut" shortcut="Cmd+X"/>
    <item name="Copy" command="Copy" shortcut="Cmd+C"/>
    <item name="Paste" command="Paste" shortcut="Cmd+V"/>
    <item name="Delete" command="DeleteSelection" shortcut="Delete"/>
    <separator/>
    <item name="Select All" command="SelectAll" shortcut="Cmd+A"/>
    <item name="Deselect All" command="DeselectAll" shortcut="Cmd+Shift+A"/>
    <separator/>
    <item name="Keyboard Shortcuts..." command="ShowKeyboardCustomization"/>
  </menu>

  <!-- Clip Menu -->
  <menu name="Clip">
    <item name="Split" command="Split" shortcut="Cmd+B"/>
    <item name="Link Clips" command="LinkClips" shortcut="Cmd+L"/>
    <item name="Unlink Clips" command="UnlinkClips" shortcut="Cmd+Shift+L"/>
    <separator/>
    <item name="Nudge Left" command="Nudge" params="{delta_ms=-33}"/>
    <item name="Nudge Right" command="Nudge" params="{delta_ms=33}"/>
    <separator/>
    <item name="Enable/Disable" command="ToggleClipEnabled" shortcut="D"/>
    <separator/>
    <item name="Match Frame" command="MatchFrame" shortcut="F"/>
    <item name="Reveal in Filesystem" command="RevealInFilesystem" shortcut="Shift+F"/>
  </menu>

  <!-- Timeline Menu -->
  <menu name="Timeline">
    <item name="Insert" command="Insert" shortcut="F9"/>
    <item name="Overwrite" command="Overwrite" shortcut="F10"/>
    <item name="Replace" command="Replace" shortcut="F11"/>
    <separator/>
    <item name="Ripple Delete" command="RippleDelete" shortcut="Shift+Delete"/>
    <item name="Close Gap" command="CloseGap" shortcut="Cmd+Delete"/>
    <separator/>
    <item name="Zoom In" command="TimelineZoomIn" shortcut="Cmd+="/>
    <item name="Zoom Out" command="TimelineZoomOut" shortcut="Cmd+-"/>
    <item name="Zoom to Fit" command="TimelineZoomFit" shortcut="Shift+Z"/>
    <separator/>
    <item name="Go to Start" command="GoToStart" shortcut="Home"/>
    <item name="Go to End" command="GoToEnd" shortcut="End"/>
    <item name="Go to Timecode..." command="GoToTimecode" shortcut="Cmd+G"/>
  </menu>

  <!-- Media Menu -->
  <menu name="Media">
    <item name="New Bin" command="NewBin" shortcut="Cmd+Shift+N"/>
    <item name="Rename..." command="RenameItem" shortcut="F2"/>
    <separator/>
    <item name="Relink Media..." command="ShowRelinkDialog"/>
    <item name="Consolidate Media..." command="ConsolidateMedia"/>
    <separator/>
    <item name="Tag Media..." command="TagMedia" shortcut="Cmd+T"/>
    <item name="Manage Tags..." command="ManageTags"/>
  </menu>

  <!-- Window Menu -->
  <menu name="Window">
    <item name="Show Project Browser" command="ShowProjectBrowser" checkable="true"/>
    <item name="Show Timeline" command="ShowTimeline" checkable="true"/>
    <item name="Show Inspector" command="ShowInspector" checkable="true"/>
    <item name="Show Viewer" command="ShowViewer" checkable="true"/>
    <separator/>
    <item name="Toggle Panel Maximize" command="ToggleMaximizePanel" shortcut="~"/>
    <separator/>
    <menu name="Workspace">
      <item name="Editing" command="LoadWorkspace" params="{name='editing'}"/>
      <item name="Color" command="LoadWorkspace" params="{name='color'}"/>
      <item name="Audio" command="LoadWorkspace" params="{name='audio'}"/>
      <item name="Effects" command="LoadWorkspace" params="{name='effects'}"/>
      <separator/>
      <item name="Save Workspace..." command="SaveWorkspace"/>
      <item name="Manage Workspaces..." command="ManageWorkspaces"/>
    </menu>
  </menu>

  <!-- Help Menu -->
  <menu name="Help">
    <item name="User Manual" command="OpenUserManual" shortcut="F1"/>
    <item name="Keyboard Shortcuts Reference" command="OpenShortcutsReference"/>
    <separator/>
    <item name="Report Bug..." command="ReportBug"/>
    <item name="Check for Updates..." command="CheckUpdates"/>
    <separator/>
    <item name="About JVE Editor" command="ShowAbout"/>
  </menu>
</menus>
